	"version": "0.2.0",
	"configurations": [
		{
			"command": "npm run client",
			"name": "Client (NPM)",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"command": "npm run server",
			"name": "Server (NPM)",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Server (Launch)",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}\\server.js"
		}
	],
	"compounds": [
		{
			"name": "Server/Client (nodemon, http-server)",
			"configurations": ["Server (NPM)", "Client (NPM)"]
		}
	]
}
